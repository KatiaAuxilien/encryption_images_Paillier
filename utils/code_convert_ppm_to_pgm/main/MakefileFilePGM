CXX = g++
CXXFLAGS = -Wall -Wextra -g 
INCLUDES = -I.../include/
LDLIBS = 

SRC = convertPpmToPgm.cpp ../src/ImageBase.cpp ../src/Functions.cpp ../src/image_p.cpp
OBJ = $(SRC:../src/%.cpp=../obj/%.o)
EXEC = convertPpmToPgm.out

all: $(EXEC)

$(EXEC): $(OBJ)
	$(CXX) $(CXXFLAGS) $(INCLUDES) -o $@ $^ $(LDLIBS)

../obj/%.o: ../src/%.cpp
	$(CXX) $(CXXFLAGS) $(INCLUDES) -c -o $@ $<
